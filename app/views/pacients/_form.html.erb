<%= simple_form_for @pacient do |f| %>

  <%= f.input :nume %>
  <%= f.input :prenume %>
  <%= f.input :cnp %><!-- de facut verificarea de 13 cifre -->
  <%= f.input :data_integrarii, :as => :date %>
  <%= f.simple_fields_for :protocol do |g| %>
    <%= g.input :data, :as => :date %>
    <%= g.input :centru, :as => :select, :collection => Protocol::CENTRE %>
    <%= g.input :program, :as => :select, :collection => Protocol::PROGRAME %>
  <% end %>
    
  <% f.fields_for :protocols do |builder| %>
    <%= render "protocols/form", :f => builder %>
  <% end %>
  <%= f.button :submit %>
<% end %>
