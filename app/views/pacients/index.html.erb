<h1>Listing pacients</h1>

<table>
  <tr>
    <th>Nume</th>
    <th>Prenume</th>
    <th>Cnp</th>
    <th>Data integrarii</th>
    <th>Data inceperii ultimului protocol</th>
    <th> Tipul ultimului protocol</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @pacients.each do |pacient| %>
  <tr>
    <td><%= pacient.nume %></td>
    <td><%= pacient.prenume %></td>
    <td><%= pacient.cnp %></td>
    <td><%= pacient.data_integrarii %></td>
    <td><%# pacient.protocols.last.data %></td>
    <td><!-- trebe gasita o solutie mai buna, cred ca form_for([@oacient, @protocol]) --> 
      <% for protocol in pacient.protocols %>
        <%= protocol.data %>
        <%= protocol.program %>
      <% end %>
    </td>
    <td><%= link_to 'Show', pacient %></td>
    <td><%= link_to 'Edit', edit_pacient_path(pacient) %></td>
    <td><%= link_to 'Destroy', pacient, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

