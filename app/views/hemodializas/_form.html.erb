<%= form_for([@pacient, @pacient.hemodializas.build]) do |f| %>
  <% if @hemodializa.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@hemodializa.errors.count, "error") %> prohibited this hemodializa from being saved:</h2>

      <ul>
      <% @hemodializa.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <%= render "#{@hemodializa.current_step}", :f => f %>

  <div class="actions">
    <%= f.submit @hemodializa.name_of_next_step , :name=> 'next_form' %>
    <%= f.submit @hemodializa.name_of_previous_step, :name => "previous_button" unless @hemodializa.first_step? %>
    <%= f.submit 'salveaza' , :name=> 'save_ahead', :confirm => 'vrei sa bagi doar formularele astea?' %>
  </div>
  <div>
  </div>
<% end %>
